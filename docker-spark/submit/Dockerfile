ARG SPARK_VERSION
ARG HADOOP_VERSION
ARG BASE_VERSION

FROM coqueirotree/spark-base${SPARK_VERSION}-hadoop${HADOOP_VERSION}-aws-support:${BASE_VERSION}

LABEL maintainer="github.com/Coqueiro"

ENV SPARK_MASTER_NAME spark-master
ENV SPARK_MASTER_PORT 7077
ENV SPARK_APPLICATION_JAR_LOCATION /app/application.jar
ENV SPARK_APPLICATION_PYTHON_LOCATION /app/app.py
ENV SPARK_APPLICATION_MAIN_CLASS my.main.Application
ENV SPARK_APPLICATION_ARGS ""

COPY submit.sh /

CMD ["/bin/bash", "/submit.sh"]
